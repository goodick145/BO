    TURBO_MODE = not TURBO_MODE
    turboBtn.Text = TURBO_MODE and "TURBO: ON" or "TURBO: OFF"
    turboBtn.BackgroundColor3 = TURBO_MODE and colorToggleOn or colorToggleOff
end)

